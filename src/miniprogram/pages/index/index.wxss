.page__hd{
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:118rpx;
  border-bottom:1px solid #D5D5D5;
  z-index:999;
  background-color:white;
}
.page__hd label{
  font-size: 34rpx;
  line-height: 118rpx;
  float:right;
  margin-right:30rpx;
}
.page__bd{
  padding-top:120rpx;
  padding-bottom:98rpx;
}
.weui-cells{
  margin-top:0;
  font-size: 34rpx;
}
.weui-cell{
  padding:40rpx 30rpx;
}
.weui-cells:before {
  top: 0;
  border-top:0;
}
.fa{
  font-size:48rpx;
  width:48rpx;
  height:48rpx;
}
.weui-cell__bd{
  padding-left:20rpx;
}
.fa-file-text-o{
  color:#999;
}
.weui-input{
  width:100%;
  height:48rpx;
  min-height:48rpx;
  line-height:48rpx;
}
.add-words{
  text-align: center;
}
